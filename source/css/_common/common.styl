.hide-aside
  aside
    display none

.bg-filter
  backdrop-filter saturate(180%) blur(20px)
  background-color rgba(255,255,255,.7)
.jy-btn
  display block
  width: 36px;
  height: 36px;
  line-height: 32px;
  text-align center
  color: var(--font-color);
  cursor: pointer;
  margin-right: 7px;
  border-radius: $btn-radius
  background-color: var(--main-btn-bg);
  transition: .3s;
  &:hover
    background-color: var(--main-btn-hover-bg);
.jy-btn-red
  @extend .jy-btn
  color var(--font-white)
  background-color: var(--btn-red-bg);
  &:hover
    background-color: var(--btn-red-hover-bg);
.c-shadow
  box-shadow var(--main-shadow)
.mb-10
  margin-bottom: 10px;
.mb-15
  margin-bottom: 15px;
.mb-20
  margin-bottom 20px
.pd-15
  padding: 0 15px;
.f-left
  float: left!important;
.f-right
  float: right!important;

.layout
  padding-top: 35px
  animation: top-effect 1s;
  #main
    display flex
  main
    .page-inner,.post-inner
      width: 100%;
      padding: 35px
      background-color: var(--main-bg);
      border-radius: var(--main-radius);
      box-shadow: var(--main-shadow);
      +maxWidth768()
        padding: 30px 15px;
.page-inner,.post-inner
  img
    display: block;
    margin: 0 auto 20px;
    max-width: 100%;
    transition: filter 375ms ease-in .2s;
.article-lists
  display flex
  justify-content: space-between;
  align-items: flex-start;
  align-content: flex-start;
  flex-wrap wrap
  width: 100%
  .article-item
    display flex
    height: 11em;
    width: 100%;
    padding: 20px;
    margin-left: 0;
    margin-right: 0;
    margin-bottom: 0.6rem;
    background-color: var(--main-bg);
    border-radius var(--main-radius)
    overflow hidden
    transition all .3s
    +maxWidth768()
      flex-wrap wrap
      height: auto!important;
      padding: 0;
    &:hover
      box-shadow 0 2px 12px var(--shadow-color)
    a
      text-decoration none
    .article-cover
        height: 100%
        padding: 0;
        width: 30%;
        padding-right: 12px;
        +maxWidth768()
          width: 100%
          height: 230px
          padding-right: 0;
        a
          &>div
            width: 100%
            height: 100%
            border-radius var(--main-radius)
            overflow hidden
            img
              width: 100%
              height: 100%
              overflow hidden
              object-fit: cover;
              &:hover
                transform scale(1.05)
    .article-content
      display flex
      flex-direction column
      justify-content: space-between;
      padding: 0;
      padding-left 10px
      height: 100%;
      width: 70%;
      +maxWidth768()
        height: 10rem
        width: 100%
        padding 16px
      .article-info
        .title,.extract
          display -webkit-box
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
          overflow hidden
          a
            h2
              display inline
              margin: .2em 0;
              font-size 1rem;
              font-weight: 500;
              line-height: 2;
              transition: all .2s ease-in-out;
              +maxWidth768()
                font-size 1.43em;
              &:hover
                color var(--link-color)
        .extract
          line-height: 1.5;
          color var(--meta-info-color)
      .article-meta
        display flex
        justify-content: space-between;
        align-items: center;
        width: 100%
        line-height: 1.9;
        .category
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
          .cate
            font-size 0.76rem
            padding: 2px 4px;
            opacity: .8;
            color var(--font-color)
            &:hover
              opacity: 1;
        .time
          time
            font-size 0.76rem
            color var(--meta-info-color)


