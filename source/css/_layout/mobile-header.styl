#mobile-header
  position: fixed;
  display none
  width: 100%
  height: 100%
  background-color: var(--body-bg);
  z-index: 100;
  .nav-menu-head
    height: 50px
    width: 100%
    padding: 0 20px;
    background-color: var(--main-bg);
    #close-mobile-menu
      line-height: 50px;
      float left
      opacity: .8;
  #nav-menus
    height: 100%
    overflow-y auto
    overflow-x hidden
    padding-bottom: 50px;
    .menus
      ul
        .menu
          position: relative;
          margin-bottom: 8px;
          opacity: 0;
          animation fadeInRight .45s ease forwards
          animation-delay .45s
          .group
            &.mobile-hide
              .fa-chevron-down
                transform rotate(90deg)
              & + .sub-menus
                display block
          a
            display block
            width: 100%
            font-size 15px
            color var(--font-light-color)
            background-color: var(--main-bg);
            padding: 1rem 2rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            span
              padding: 0 5px;
            .fa-chevron-down
              transition transform .5s
              float: right;
          .sub-menus
            display none
            background-color: var(--main-bg);
            padding-left: 1rem;
        .menu
          &:nth-of-type(2)
            animation-delay .5s
          &:nth-of-type(3)
            animation-delay .55s
          &:nth-of-type(4)
            animation-delay .60s
          &:nth-of-type(5)
            animation-delay .65s
          &:nth-of-type(6)
            animation-delay .70s
          &:nth-of-type(7)
            animation-delay .75s
          &:nth-of-type(8)
            animation-delay .80s
          &:nth-of-type(9)
            animation-delay .85s
          &:nth-of-type(10)
            animation-delay .90s
.show-mobile-header
  display block!important