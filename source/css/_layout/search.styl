#local-search
  .search-headline
    margin: 10px 0;
    opacity: .8;
  .search-inner
    position: fixed;
    display none
    top 5rem
    left: calc(50% - 340px);
    max-height 75vh
    padding: 22px
    max-width: 680px
    width: 100%
    overflow hidden
    background-color: var(--main-bg);
    border-radius: var(--main-radius);
    z-index: 999;
    +maxWidth768()
      top: 0
      left: 0
      max-height 100%
      border-radius: 0
    .local-search-input
      .local-search-content
        display flex
        justify-content: space-between;
        align-items: center;
        width: 100%;
        line-height: 30px;
        .search-close-btn
          opacity: .7;
        #search-input
          flex: 1;
          height: 30px;
    #local-search-results
      overflow-x hidden
      overflow-y auto
      .search-result-list
        max-height 600px
        line-height: 1.8;
        +maxWidth768()
          max-height: 75vh !important
        li
          margin-bottom: 5px;
        .search-result-title
          display block
          width: 100%
          color var(--title-color)
          font-size 18px
          padding: 0 5px;
          font-weight: 700
          &:hover
            color var(--link-color)
            background-color: var(--depth-hover-bg);
        .search-keyword
          color #d9534f
        .search-result
          padding: 0 5px;
          opacity: .8;
  #search-mask
    position: fixed;
    display none
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 998;
    background-color: rgba(0,0,0,.6);