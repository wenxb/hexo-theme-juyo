#archives
  .years
    opacity: .7;
    margin: 5px 0;
  .post-sort-item
    position: relative;
    display flex
    padding: 5px;
    color var(--font-color)
    border-radius 2px
    overflow: hidden;
    &:before
      position: absolute;
      content: '';
      top: 18px
      left: 2px;
      width: 10px;
      height: 10px;
      border: 2px solid $theme-color;
      border-radius: 6px;
      background: var(--main-bg);
      transition: all .2s ease-in-out;
    &:hover
      color var(--link-color)
      background-color: var(--depth-hover-bg);
    .post-sort-info
      display flex
      justify-content: space-between;
      flex-wrap nowrap
      padding: 0 15px;
      width: 100%
      -webkit-line-clamp: 2;
      .title
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      .date
        text-align: right;
        min-width: 60px;
