.home-page
  .jy-index-card
    display flex
    justify-content: space-between;
    flex-wrap wrap
    margin-bottom: 20px;
    .card-item
      width: calc(25% - 8px);
      +maxWidth768()
        width: calc(50% - 4px);
    a
      display block
      .card
        position: relative;
        padding-bottom: 48%!important;
        border-radius var(--main-radius)
        overflow hidden
        transition all .3s
        &:hover
          img
            transform: scale(1.1)
        img,.mask
          position: absolute;
          width 100%
          height: 100%;
        .mask
          background-color: #000;
          opacity 0.1
        .text
          position: absolute;
          width: 100%
          top 50%
          left: 50%;
          color var(--font-white)
          text-align center
          font-size 0.75rem
          transform: translate(-50%,-50%);